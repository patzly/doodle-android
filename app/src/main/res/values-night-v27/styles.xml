<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Doodle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="android:colorForeground">@color/onBackground</item>

        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">#ffffff</item>

        <item name="colorControlNormal">@color/onBackground</item>
        <item name="android:colorControlActivated">@color/secondary</item>
        <item name="colorControlHighlight">@color/highlight</item>
        <item name="android:colorEdgeEffect">@color/highlight</item>

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:statusBarColor">@color/background</item>

        <item name="android:fontFamily">@font/roboto_mono_regular</item>

        <item name="elevationOverlayEnabled">true</item>
        <item name="android:windowSplashscreenContent">@drawable/splash_content</item>
    </style>

    <style name="Theme.Doodle.BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <item name="android:colorBackground">@color/surface</item>
        <item name="colorOnBackground">@color/on_surface</item>
        <item name="android:colorForeground">@color/on_surface</item>

        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <item name="android:colorEdgeEffect">@color/highlight</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:navigationBarDividerColor">@color/stroke</item>
        <item name="android:windowIsFloating">false</item>

        <item name="bottomSheetStyle">@style/Shape.Doodle.BottomSheet</item>
    </style>

</resources>